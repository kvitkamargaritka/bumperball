.feedback
  position: relative
  min-height: 1000px
  background-color: #ffffff

  .icon
    display: block
    width: 73px
    height: 73px
    background-image: url('/img/how-icon.png')
    background-repeat: no-repeat
    background-position: center
    background-size: contain

  .heading-title
    color: #000000

  &-list
    width: 100%
    display: flex
    flex-direction: row
    justify-content: space-between
    flex-wrap: wrap

  &-item
    width: 23%

  &-image
    width: 100%

  &-info

    .name
      display: block
      margin-bottom: 10px
      font-size: 22px

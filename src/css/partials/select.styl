.select
  display: inline-block
  position: relative
  width: 260px

  +media-tablet-up()
    width: 100%

  select
    padding: 0 10px
    width: 100%
    height: 40px
    color: #ffffff
    font-size: 16px
    background: transparent
    border-top: none
    border-left: none
    border-right: none
    border-bottom: 1px solid #5b5c5b
    border-radius:0
    cursor: pointer
    box-shadow: none
    box-sizing: border-box
    -webkit-appearance: none
    -webkit-border-radius: 0

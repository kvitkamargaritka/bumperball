.offers
  position: relative
  min-height: 1000px
  background-image: url('/img/offer-bg.png')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  z-index: 1

  .heading-title
    text-transform: uppercase
    font-size: 45px
    color: #FFFFFF

  &-list
    display: flex
    flex-direction: row
    justify-content: space-around
    +media-tablet-up()
      flex-direction: column

.offer
  position: relative
  padding: 40px 30px
  width: 330px
  min-height: 590px
  color: #ffffff
  background-color: #0d0d0d
  border-radius: 10px
  box-shadow: 0 1px 5px 5px rgba(33,61,72,0.75)
  box-sizing border-box
  +media-tablet-up()
    width: 100%
    margin-bottom: 20px

  &-title
    display: block
    font-size: 20px
    text-transform: uppercase

  &-sub-title
    display: block
    margin: 20px 0
    text-transform: uppercase
    text-decoration: underline

  &-description
    margin-bottom: 45px
    font-size: 16px

  &-items
    margin-top: 45px
    font-size: 16px
    display: flex
    flex-direction: column

  &-button-wrap
    position: absolute
    left: 0
    bottom: 0
    width: 100%

  &-button
    width: 100%
    height: 74px
    line-height 74px
    color: #ffffff
    font-size: 16px
    background-color: #2351c8
    border-radius: 0 0 10px 10px
    text-transform: uppercase
    text-decoration: underline
    transition: all .3s ease-in-out

    &:hover
      background: darken(#2351c8, 20%)





.types
  position: relative
  min-height: 1000px
  background-color: #000000

  .icon
    display: block
    width: 84px
    height: 75px
    background-image: url('/img/types-icon.png')
    background-repeat: no-repeat
    background-position: center
    background-size: contain

  &-list
    width: 100%
    display: flex
    flex-direction: row
    justify-content: space-between
    flex-wrap: wrap

    +media-tablet-up()
      flex-direction: column

.type
  position: relative
  padding: 50px 30px 0 30px
  width: 30%
  height: 315px
  background-color: #ffffff
  color: #000000
  box-shadow: 0 0 10px 5px rgba(255,255,255,1)
  box-sizing border-box
  +media-tablet-up()
    width: 100%
    margin-bottom: 40px

  &-heading
    display: block
    text-transform: uppercase
    margin-bottom: 60px

  &-button-wrap
    position: absolute
    left: 0
    bottom: 0
    width: 100%

  &-button
    width: 100%
    height: 74px
    line-height 74px
    color: #ffffff
    text-transform: uppercase
    text-decoration: underline
    background-image: linear-gradient(to right top, #eb413a, #f14c32, #f75728, #fb631b, #fe6f04)

.container
  width: 1180px
  padding: 0 20px
  margin: 0 auto
  +media-desktop-up()
    width: 1080px
  +media-tablet-landscape-up()
    width: 100%
    padding: 0

.screen
  position: relative
  box-sizing: border-box

  .screen-top
    padding: 65px 0
    display: flex
    flex-direction: column
    align-items: center

  .heading-title
    text-transform: uppercase
    font-size: 45px
    color: #FFFFFF

.header
  background-color: #000

  &-wrap
    position: relative
    height: 95px
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center

  &-left
    display: flex
    justify-content: space-between
    align-items: center

  &-right
    display: flex
    flex-direction row
    align-items center

  &-center
    +media-tablet-landscape-up()
      display: none

.hamburger
  +media-big-desktop-up()
    display: none
  +media-tablet-landscape-up()
    display: block

.button .contact-button
  width: 196px
  height: 35px
  color: white
  font-size: 16pt
  line-height: 25pt
  background-color: #1799D4
  trasnsition: all 0.3s ease-in-out
  -webkit-box-shadow: 0px 0px 8px 0px rgba(23,153,212,1)
  -moz-box-shadow: 0px 0px 8px 0px rgba(23,153,212,1)
  box-shadow: 0px 0px 8px 0px rgba(23,153,212,1)
  +media-tablet-up()
    display: none

.button .contact-button:hover
  background: darken(#1799D4, 20%)

.footer
  margin: 50px 0

  &-wrap
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    +media-tablet-up()
      flex-direction: column

  &-title
    display: block
    text-align: center
    font-size: 20px

  &-link
    color: #c48233
    font-size: 24px

  .phone-item
    color: #c48233
    font-size: 24px

.copyright
  text-align: center

.phone
  margin-right: 30px
  display: flex
  flex-direction: column

  &-item
    color: #ffffff

.logo
  position: relative
  display: inline-block
  +media-tablet-up()
    margin-left: 30px

  &-img
    +media-tablet-landscape-up()
      display: none

  &-img-small
    display: none
    +media-tablet-landscape-up()
      display: block



.slider
  width: 100%
  //text-align: center
  //margin: 0 auto

  &__el
    margin: 0 auto
    width: 100%
    height: 100%

//.slick-slide
//  padding: 0 5px

.slick-list
  padding: 0
  margin: 0 auto
  max-width: 900px

.btn-prev,
.btn-next
  display: block
  width: 33px
  height: 60px
  position: absolute
  top: 50%
  transform: translateY(-50%)
  cursor: pointer
  +media-tablet-landscape-up()
    top: auto
    bottom: -110px

  &:before,
  &:after
    content: ''
    position: absolute
    left: 0
    width: 30px
    height: 1px
    background-color: #ffffff

  &:before
    top: 17px

  &:after
    top: 38px

.btn-prev
  left: 0
  +media-tablet-landscape-up()
    left: 40%

  &:before
    transform: rotate(-45deg)

  &:after
    transform: rotate(45deg)

.btn-next
  right: 0
  +media-tablet-landscape-up()
    right: 40%

  &:before
    transform: rotate(45deg)

  &:after
    transform: rotate(-45deg)

.slick-dots
  position: absolute
  bottom: -30px
  display: block
  width: 100%
  padding: 0
  list-style: none
  text-align: center
  +media-tablet-landscape-up()
    display: none!important

  li
    position: relative
    display: inline-block
    width: 6px
    height: 6px
    margin: 0 5px
    padding: 0
    cursor: pointer

    button
      display: none

    &:before
      top: 1px
      transition: all .5s
      content: ''
      width: 6px
      height: 6px
      border-radius: 50px
      background-color: #c17f31
      position: absolute

    &.slick-active:before
      top: 0
      width: 8px
      height: 8px
      margin-left: -2px
      background-color: #008aff


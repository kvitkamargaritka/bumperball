.screen
  position: relative
  box-sizing: border-box

  &-title
    padding: 65px 0
    display: flex
    flex-direction: column
    align-items: center
    text-align: center

  &-icon
    margin-bottom: 10px

  &-content
    padding-bottom: 65px

  .heading-title
    font-size: 35px
    color: #FFFFFF
    text-transform: uppercase

    +media-tablet-up()
      font-size: 28px

